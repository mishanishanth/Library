           <!-- <a href="https://localhost:44315/Login/Logout" class="btn btn-primary">Logout</a>-->
        }
        @if(Model.role == "Librarian")
        {
             <h4>Welcome to Library System  @Model.firstname</h4>
            <a href="https://localhost:44315/Home/Catalogue" class="btn btn-primary">Catalogue</a>
            <a href="https://localhost:44315/Transaction/Transaction" class="btn btn-primary">Transaction</a> 
            <a href="https://localhost:44315/Media/AddMedia" class="btn btn-primary">Media Management</a> 
           <a href="https://localhost:44315/User/EditUser?userid=@Context.Session.GetInt32("userid")" class="btn btn-primary">Profile</a> 
           <!-- <a href="https://localhost:44315/Login/Logout" class="btn btn-primary">Logout</a>-->
        }
        @if(@Context.Session.GetString("userrole") == "Patron" || Model.role =="Patron")
        {
            <h3>Welcome to Library System  @Model.firstname</h3>
            <a href="https://localhost:44315/Home/Catalogue" class="btn btn-primary">Catalogue</a>
            <a href="https://localhost:44315/Transaction/Transaction" class="btn btn-primary">Transaction</a> 
