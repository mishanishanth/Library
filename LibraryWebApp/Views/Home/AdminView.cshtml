        }
      <!--  @if(Model.role=="Guest")
        {
              <h3>Welcome to Library System  @Model.firstname</h3>
          
        }-->

    @if (Model.accountstatus == "Disabled")
    {
        <p style="color:red;font-size:50px;">User account disabled, please contact Admin</p>
    }
    @if (Model.username == "NA" || Model.username == null)
    {
        <h3>Welcome to Library System  @Model.firstname</h3>
        <p style="color:red;font-size:50px;">Invalid password or user does not exist</p>

    }

