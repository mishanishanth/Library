<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMedia">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="medianame" class="control-label">Medianame</label>
                <input asp-for="medianame" class="form-control" />
                <span asp-validation-for="medianame" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mediatype" class="control-label">MediaType</label>
                <input asp-for="mediatype" class="form-control" />
                <span asp-validation-for="mediatype" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mediagenre" class="control-label">MediaGenre</label>
                <input asp-for="mediagenre" class="form-control" />
                <span asp-validation-for="mediagenre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mediaauthor" class="control-label" >MediaAuthor</label>
                <input asp-for="mediaauthor" class="form-control" />
                <span asp-validation-for="mediaauthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="numberofcopies" class="control-label">NumberOfCopies</label>
                <input asp-for="numberofcopies" class="form-control" />
                <span asp-validation-for="numberofcopies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Media" class="btn btn-primary" formmethod="post" />
            </div>
        </form>
    </div>
</div>

